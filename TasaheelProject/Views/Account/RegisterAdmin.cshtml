@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@model TasaheelProject.Data.Viewmodel.AdminViewmodel


<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="fw-bold mb-0">حساب جديد</h1>

</div>



<form asp-controller="Account" asp-action="RegisterAdmin" method="post">

    

    <div class="mb-4">
        <input type="text" asp-for="Name" class="form-control form-control-lg text-end" placeholder="الاسم" required>
    </div>
    
    <div class="mb-4">
        <input type="email" asp-for="Email" class="form-control form-control-lg text-end" placeholder="Email" required>
    </div>
    <div class="mb-4 input-group input-group-lg">
        <input type="password" asp-for="Password" class="form-control text-end border-end-0" placeholder="كلمة المرور" required>
        <span class="input-group-text bg-white border-start-0 cursor-pointer password-toggle">
            <i class="bi bi-eye-fill text-muted"></i>
        </span>
    </div>



    <div class="d-grid mb-3">
        <button type="submit" class="btn btn-primary btn-lg custom-register-btn">إنشاء حساب جديد</button>
    </div>
</form>