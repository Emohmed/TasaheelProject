            <label asp-for="Code" class="form-label">الكود</label>
            <input asp-for="Code" class="form-control" />
            <span asp-validation-for="Code" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">الاسم</label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="City" class="form-label">المدينة</label>
            <input asp-for="City" class="form-control" />
        </div>

        <div class="mb-3">
            <label asp-for="Address" class="form-label">العنوان</label>
            <input asp-for="Address" class="form-control" />
        </div>

        <div class="form-check mb-3">
            <input asp-for="IsActive" class="form-check-input" />
            <label asp-for="IsActive" class="form-check-label">نشط</label>
        </div>

        <button type="submit" class="btn btn-success">💾 حفظ</button>
        <a asp-action="ManageBranches" asp-route-agencyId="@agencyId" class="btn btn-secondary">🔙 رجوع</a>
    </form>
</div>
