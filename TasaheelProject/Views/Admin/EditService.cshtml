@model TasaheelProject.Data.Viewmodel.ServiceViewModel

@{
    ViewData["Title"] = "تعديل الخدمة";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>تعديل بيانات الخدمة</h2>

@if (ViewBag.AgencyName != null)
{
    <h3>الجهة: **@ViewBag.AgencyName**</h3>
}

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditService" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <input asp-for="serviceid" /> 
            <input type="hidden" asp-for="AgencyId" /> 

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fee" class="control-label"></label>
                <input asp-for="Fee" class="form-control" type="number" step="0.01" />
                <span asp-validation-for="Fee" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="حفظ التعديلات" class="btn btn-primary" />

                
                <a asp-action="ListServices" class="btn btn-secondary">إلغاء والعودة</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
