@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@* ملحوظة للمطور: هذا الكود هو محتوى الصفحة (View) 
   ويفترض أنه سيتم عرضه ضمن ملف Layout رئيسي يحتوي على CSS و Bootstrap.
*@
<style>
    /* الألوان المستخدمة:
       اللون الأساسي للزر والعناصر: #0d6efd (لون Bootstrap الأزرق الافتراضي)
       لون الخلفية للصفحة: لون رمادي/أزرق فاتح #e6ebf5 (لتحقيق الشبه بالصورة)
    */

    body {
        /* تطبيق الخلفية الزرقاء الفاتحة المتدرجة المشابهة للصورة */
        background: linear-gradient(180deg, #f5f5f5 0%, #e6ebf5 100%);
        min-height: 100vh;
    }

    .contact-page-container {
        /* لضمان توسيط المحتوى عمودياً وأفقياً */
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .contact-box {
        background-color: #ffffff; /* خلفية بيضاء لنموذج الاتصال */
        border: 1px solid #dee2e6;
    }

    /* تنسيق الزر الرئيسي "إرسال" */
    .btn-info {
        background-color: #0d6efd; /* اللون الأزرق القوي للزر */
        border-color: #0d6efd;
        color: #ffffff;
        font-weight: bold;
        padding: 10px 0;
        font-size: 1.1rem;
    }

        .btn-info:hover {
            background-color: #0b5ed7;
            border-color: #0b5ed7;
        }

    /* تنسيق حقول الإدخال */
    .form-control-lg {
        border-radius: 0.5rem; /* حواف مستديرة قليلاً */
        height: 60px; /* لزيادة حجم الحقول مثل الصورة */
    }

    /* تعديل لون أيقونات التواصل */
    .text-primary {
        color: #0d6efd !important;
    }

    /* جعل حقل الرسالة أطول */
    textarea.form-control-lg {
        height: 150px;
    }

    /* تنسيق أيقونات التواصل الاجتماعي */
    .social-icon {
        width: 50px;
        height: 50px;
        display: flex;
        align-items: center;
        justify-content: center;
        border: 2px solid;
    }
</style>

<div class="contact-page-container">
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10">

                <div class="contact-box p-4 p-md-5 shadow-lg rounded-3">

                    <div class="text-center mb-4">
                        <h2 class="fw-bold text-primary mb-2">تواصل معنا</h2>
                        <p class="text-muted">إذا كان لديك أي سؤال أو استفسار فلا تتردد في التواصل معنا</p>
                    </div>

                    <form asp-controller="Home" asp-action="SubmitContact" method="post">

                        <div class="mb-3">
                            <input type="text" class="form-control form-control-lg text-end" id="Name" name="Name" placeholder="الاسم" required>
                        </div>

                        <div class="mb-3">
                            <input type="email" class="form-control form-control-lg text-end" id="Email" name="Email" placeholder="Email" required>
                        </div>

                        <div class="mb-3">
                            <input type="tel" class="form-control form-control-lg text-end" id="PhoneNumber" name="PhoneNumber" placeholder="رقم الهاتف" required>
                        </div>

                        <div class="mb-4">
                            <textarea class="form-control form-control-lg text-end" id="Message" name="Message" rows="4" placeholder="الرسالة" required></textarea>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-info btn-lg">إرسال</button>
                        </div>
                    </form>

                    <hr class="my-5">

                    <div class="text-center">
                        <h4 class="mb-4 fw-bold text-dark">تواصل معنا عبر</h4>

                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <i class="bi bi-envelope-fill text-primary me-3 fs-4"></i>
                            <a href="mailto:Example@gmail.com" class="btn btn-outline-secondary w-50" style="min-width: 200px;">Example@gmail.com</a>
                        </div>

                        <div class="d-flex align-items-center justify-content-center mb-4">
                            <i class="bi bi-telephone-fill text-primary me-3 fs-4"></i>
                            <a href="tel:2180910000000" class="btn btn-outline-secondary w-50" style="min-width: 200px;">2180910000000</a>
                        </div>

                        <div class="d-flex justify-content-center gap-3 mt-4">
                            <a href="#" class="btn btn-outline-primary btn-lg rounded-circle p-2 social-icon"><i class="bi bi-twitter fs-4"></i></a>
                            <a href="#" class="btn btn-outline-primary btn-lg rounded-circle p-2 social-icon"><i class="bi bi-facebook fs-4"></i></a>
                            <a href="#" class="btn btn-outline-primary btn-lg rounded-circle p-2 social-icon"><i class="bi bi-linkedin fs-4"></i></a>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>